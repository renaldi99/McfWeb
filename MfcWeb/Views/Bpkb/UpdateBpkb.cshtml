@{
    var user_id = ViewData["user_id"];
    var agreement_number = ViewData["agreement_number"];

}


<div class="loading-screen">
    <div class="spinner"></div>
</div>

<h2>Update BPKB</h2>

<input id="user_id" style="display: none;" value=@user_id />
<input id="agreement_number" style="display: none;" value=@agreement_number />
<div class="container">
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label class="form-label">Branch Id</label>
                <input id="branch_id" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">No. BPKB</label>
                <input id="bpkb_no" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Tanggal BPKB In</label>
                <input id="bpkb_date_in" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Tanggal BPKB</label>
                <input id="bpkb_date" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">No. Faktur</label>
                <input id="faktur_no" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <label class="form-label">Tanggal Faktur</label>
                <input id="faktur_date" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">No Polisi</label>
                <input id="police_no" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Lokasi Penyimpanan</label>
                <select id="location_id" class="form-select" aria-label="Default select example">
                    <option selected value="">-- Select --</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row p-2">
                <button id="btn_save" type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
        <div class="col">
            <div class="row p-2">
                <button id="btn_cancel" type="button" class="btn btn-warning">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-primary" role="alert">
    Sebelum melakukan input data terlebih dahulu isi location storage di tab storage
</div>

@section Scripts {
    <script src="~/js/update-bpkb.js"></script>
}